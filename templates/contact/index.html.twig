                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        {{  contact.nom }}{{ contact.prenom }}</strong> <br>
                    </div>
                    <a href="{{ contact.Image }}">
                        <img src="{{ contact.coverImage }}" alt="Image de contact" style="height: 200px; width: 100%; display: block">
                    </a>

                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ url }}">
                                {{ ad.title }}
                            </a>     
                        </h4>
                        <p class="card-text">
                            {{ ad.introduction }}
                    
                        </p>
                        <a href="{{ url }}" class="btn btn-secondary">Afficher le d√©tail !</a>
                </div>
            </div>
        </div>
            {% endfor %}
    </div>
    </div>
{% endblock %}
